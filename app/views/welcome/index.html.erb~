<script type="text/javascript">
  jQuery.noConflict();

  	jQuery(function(){
	 
	  jQuery(".pimage-video").click(function(){
	    var a=jQuery(this).attr('id');
		  jQuery('#a'+a+',#overlay').animate({'opacity':'0.7'}, 30, 'linear');
        jQuery('#a'+a).animate({'opacity':'1.00'},300,'linear');
       	jQuery('#overlay, #a'+a).css('display','block');
       	jQuery('#overlay, #a'+a).css({'position':'fixed'});
       	jQuery('#a'+a).css({'top':'20%','left':'34%'});
    	});

	  jQuery('.pimage-video-close').click(function(){
		  jQuery('#overlay, .pimage-video-info').animate({'opacity':'0'}, 300, 'linear', function(){
       	jQuery('#overlay, .pimage-video-info').css('display','none');
		  });
	  });
	  });
</script>

