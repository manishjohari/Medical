  <!--jQuery llightbox to upload file-->
<div id="info">
  <div id="results">
    <h1>Upload .Zip File</h1>
    <%= form_for :file_upload, :html => {:multipart => true}, :url=>{:action=>'tounzip', :controller=>'welcome'} do |f| %>
  <%= f.file_field :my_file %>
  <%= f.submit "Upload" %>
<% end %>
   
    <p style="margin-top:20px; text-align:right;"><a href="#" id="close">Close</a></p>
  </div>
</div>
<!--jQuery llightbox to upload file end-->



<!--jQuery llightbox for login-->
<div id="login_info">
  <div id="results">
    <h1>Login</h1>
    <%= form_tag 'login', :html => {:multipart => true} do%>
      <%= label_tag 'email', nil, :style=>"padding: 1px 27px 1px 52px;"%>
      <%= text_field_tag :email, '',:class =>'input' %><br>
      <%= label_tag 'Password', nil, :style=>"padding: 1px 4px 1px 52px;"%>
      <%= password_field_tag :password, '',:class =>'input', :style=>"margin-top: 10px;" %><br>
      <%= submit_tag "Login", :class=>'button', :style=>"margin-top: 24px;margin-left: 53px;"%>
     
    <% end %>
   
    <p style="margin-top:20px; text-align:right;"> <%= link_to "New User","#" ,:style=>"padding-right: 20px;", :id=>"signup"%> <a href="#" id="login_close">Close</a></p>
  </div>
</div>
<!--jQuery llightbox for login end-->

<!--jQuery llightbox for signup-->
<div id="signup_info">
  <div id="results">
    <h1>New User</h1>
    <%= form_tag 'signup', :html => {:multipart => true} do%>
      <%= label_tag 'email', nil, :style=>"padding: 1px 80px 1px 52px;"%>
      <%= text_field_tag :email, '',:class =>'input' %><br>
      <%= label_tag 'Password', nil, :style=>"padding: 1px 57px 1px 52px;"%>
      <%= password_field_tag :password, '',:class =>'input', :style=>"margin-top: 10px;" %><br>
      <%= label_tag 'Confirm Password', nil, :style=>"padding: 1px 5px 1px 52px;"%>
      <%= password_field_tag :cpassword, '',:class =>'input', :style=>"margin-top: 10px;" %><br>
      <%= submit_tag "SignUp", :class=>'button', :style=>"margin-top: 24px;margin-left: 53px;"%>
     
    <% end %>
   
    <p style="margin-top:20px; text-align:right;"><a href="#" id="signup_close">Close</a></p>
  </div>
</div>
<!--jQuery llightbox for signup end-->
