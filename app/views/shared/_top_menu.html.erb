 <script type="text/javascript">
  jQuery.noConflict();
  jQuery(function(){
	 
	  jQuery("#open").click(function(){
		  jQuery('#info,#overlay').animate({'opacity':'0.7'}, 30, 'linear');
        jQuery('#info').animate({'opacity':'1.00'},300,'linear');
       	jQuery('#overlay, #info').css('display','block');
       	jQuery('#overlay, #info').css({'position':'fixed'});
       	jQuery('#info').css({'top':'35%','left':'35%'});
       //	jQuery('#info').css({'left':((jQuery(document).width()/2)-(jQuery('#info').width()/2))});
       //	jQuery('#info').css({'top':((jQuery(document).height()/2)-(jQuery('#info').height()/2)-50)});
    	});

	  jQuery('#close').click(function(){
		  jQuery('#overlay, #info').animate({'opacity':'0'}, 300, 'linear', function(){
       	jQuery('#overlay, #info').css('display','none');
		  });
	  });
    	
    	jQuery("#more_detail").click(function(){
    	 jQuery('#more_detail_info,#more_detail_overlay').animate({'opacity':'0.7'}, 300, 'linear');
    	 jQuery('#more_detail_info').animate({'opacity':'1.00'},300,'linear');
		   	jQuery('#more_detail_overlay, #more_detail_info').css('display','block');
		   	jQuery('#more_detail_info').css({'top':'35%','left':'35%'});
       	//jQuery('#more_detail_info').css({'left':((jQuery(document).width()/2)-(jQuery('#more_detail_info').width()/2))});
       	//jQuery('#more_detail_info').css({'top':((jQuery(document).height()/2)-(jQuery('#more_detail_info').height()/2)-50)});
    	});

	  jQuery('#more_detail_close').click(function(){
		  jQuery('#more_detail_overlay, #more_detail_info').animate({'opacity':'0'}, 300, 'linear', function(){
       	jQuery('#more_detail_overlay, #more_detail_info').css('display','none');
		  });
	  });
	  
 	  jQuery("#login").click(function(){
		  jQuery('#login_info,#overlay').animate({'opacity':'0.7'}, 300, 'linear');
        jQuery('#login_info').animate({'opacity':'1.00'},300,'linear');
       	jQuery('#overlay, #login_info').css('display','block');
       	jQuery('#login_info').css({'top':'35%','left':'35%'});
       	//jQuery('#login_info').css({'left':((jQuery(document).width()/2)-(jQuery('#login_info').width()/2))});
       	//jQuery('#login_info').css({'top':((jQuery(document).height()/2)-(jQuery('#login_info').height()/2)-50)});
    	});

	  jQuery('#login_close').click(function(){
		  jQuery('#overlay, #login_info').animate({'opacity':'0'}, 300, 'linear', function(){
       	jQuery('#overlay, #login_info').css('display','none');
		  });
	  });

	  
	  jQuery( ".f-right a" ).click(function(){
              jQuery( ".f-right a").removeClass('tabbing-select');
                     jQuery(this).addClass('tabbing-select');
       });
       
    
   jQuery("#signup").click(function(){
    jQuery("#overlay,#login_info").css('display','none');
    jQuery('#signup_info,#overlay').animate({'opacity':'0.7'}, 300, 'linear');
    jQuery('#signup_info').animate({'opacity':'1.00'},300,'linear');
    jQuery('#signup_info,#overlay').css('display', 'block');
    jQuery('#signup_info').css({'top':'35%','left':'35%'});
    //jQuery('#signup_info').css({'left':((jQuery(document).width()/2)-(jQuery('#signup_info').width()/2))});
   	//jQuery('#signup_info').css({'top':((jQuery(document).height()/2)-(jQuery('#signup_info').height()/2)-50)});
   });
   
    jQuery('#signup_close').click(function(){
		  jQuery('#overlay, #signup_info').animate({'opacity':'0'}, 300, 'linear', function(){
       	jQuery('#overlay, #signup_info').css('display','none');
		  });
	  });
	
  });
  </script>

