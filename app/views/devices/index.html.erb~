    <td><%= link_to 'Edit', edit_device_path(device), :id=>device %></td>
    <td><%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Device', "#", :onclick=>'new_device()' %>
