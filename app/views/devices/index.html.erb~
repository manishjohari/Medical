<script> jQuery("#colorbox, #cboxOverlay").show(); </script>
<script>
function new_device()
{
jQuery.colorbox({opacity:0.8, initialWidth: 92, initialHeight: 92, width: 650, top: "20%", height: 450, href:"<%=new_device_path%>"});
jQuery("#colorbox, #cboxOverlay").hide(); 
}
</script>
